@using HospitalPatientTreatmentRecordCoreMvcCRUD.Models.ViewModels
@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container d-flex justify-content-center align-items-center" style="min-height:100vh;">
    <div class="account-box shadow p-4 rounded-4"
         style="width:100%; max-width:380px; background-color: rgba(255, 255, 255, 0.85); backdrop-filter: blur(6px);">

        <h4 class="text-center fw-bold mb-3 text-primary">
            <i class="fas fa-key me-2"></i> Change Password
        </h4>

        <form asp-action="ChangePassword" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Email (readonly) -->
            <div class="form-floating mb-2">
                <input asp-for="Email" class="form-control" placeholder="Email" readonly" />
                <label asp-for="Email"><i class="fas fa-envelope me-2 text-secondary"></i> Email</label>
            </div>

            <!-- New Password -->
            <div class="form-floating mb-2">
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" autocomplete="new-password" />
                <label asp-for="NewPassword"><i class="fas fa-lock me-2 text-secondary"></i> New Password</label>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-3">
                <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Confirm New Password" autocomplete="new-password" />
                <label asp-for="ConfirmNewPassword"><i class="fas fa-lock me-2 text-secondary"></i> Confirm Password</label>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 py-2 fs-6 rounded-pill">
                <i class="fas fa-check-circle me-2"></i> Submit
            </button>

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none text-secondary small">
                    <i class="fas fa-arrow-left me-1"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
