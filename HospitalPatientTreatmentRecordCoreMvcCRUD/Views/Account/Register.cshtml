@using HospitalPatientTreatmentRecordCoreMvcCRUD.Models.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container d-flex justify-content-center align-items-center bg-light" style="min-height:100vh;">
    <div class="account-box shadow p-4 rounded-4"
         style="width:100%; max-width:380px; background-color: rgba(255, 255, 255, 0.8); backdrop-filter: blur(6px);">

        <h4 class="text-center fw-bold mb-3 text-primary">
            <i class="fas fa-id-card-alt me-2"></i> Register
        </h4>

        <form asp-action="Register" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Full Name -->
            <div class="form-floating mb-2">
                <input asp-for="Name" class="form-control" placeholder="Full Name" autocomplete="off" />
                <label asp-for="Name"><i class="fas fa-user me-2 text-secondary"></i> Full Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-floating mb-2">
                <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="new-email" />
                <label asp-for="Email"><i class="fas fa-envelope me-2 text-secondary"></i> Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-floating mb-2">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" autocomplete="new-password" />
                <label asp-for="Password"><i class="fas fa-lock me-2 text-secondary"></i> Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" autocomplete="off" />
                <label asp-for="ConfirmPassword"><i class="fas fa-lock me-2 text-secondary"></i> Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 py-2 fs-6 rounded-pill">
                <i class="fas fa-user-check me-2"></i> Register
            </button>

            <p class="text-center mt-3 mb-1 small">
                Already have an account?
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none fw-semibold text-primary">Login</a>
            </p>

            <div class="text-center">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-secondary small">
                    <i class="fas fa-arrow-left me-1"></i> Back to Home
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
