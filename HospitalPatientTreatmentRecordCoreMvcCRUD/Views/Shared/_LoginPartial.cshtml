@using HospitalPatientTreatmentRecordCoreMvcCRUD.Models
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Users> signInManager;


<ul class="navbar-nav ms-auto">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">
                Logout <i class="fas fa-sign-out-alt"></i>
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Register">Register</a>
        </li>
    }

</ul>