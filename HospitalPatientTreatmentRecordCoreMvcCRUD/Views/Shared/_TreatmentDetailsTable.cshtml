@using HospitalPatientTreatmentRecordCoreMvcCRUD.Models
@model List<TreatmentDetail>

<div class="table-responsive">
    <table class="table table-bordered table-sm align-middle" id="Exptable">
        <thead class="table-light text-center">
            <tr>
                <th style="width: 45%;">Treatment Name</th>
                <th style="width: 30%;">Cost</th>
                <th style="width: 25%;">Action</th>
            </tr>
        </thead>

        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input type="text" class="form-control" name="TreatmentDetails[@i].TreatmentName" value="@Model[i].TreatmentName" />
                    </td>

                    <td>
                        <input type="number" class="form-control" name="TreatmentDetails[@i].Cost" value="@Model[i].Cost" />
                    </td>

                    <td class="text-center">
                        <button type="button" class="btn btn-sm btn-danger" onclick="DeleteItem(this)">
                            Remove
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <input type="hidden" id="LastIndex" value="@Model.Count" />
</div>
