@model IEnumerable<HospitalPatientTreatmentRecordCoreMvcCRUD.Models.TreatmentType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Treatment Type</h2>

    <div class="text-center mb-3">
        <a asp-action="Create" class="btn btn-success">
            + Create New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.First().TreatmentTypeName)
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TreatmentTypeName</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.TreatmentTypeId" class="btn btn-outline-primary me-2">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.TreatmentTypeId"
                               class="btn btn-outline-danger"
                               onclick="return confirm('Are you sure you want to delete this item?');">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
