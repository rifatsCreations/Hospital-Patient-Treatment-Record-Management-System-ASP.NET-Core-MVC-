@model HospitalPatientTreatmentRecordCoreMvcCRUD.Models.TreatmentType

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="text-center mb-4">Edit Treatment Type</h2>

<hr />

<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="TreatmentTypeId" />

            <div class="mb-3">
                <label asp-for="TreatmentTypeName" class="form-label"></label>
                <input asp-for="TreatmentTypeName" class="form-control" />
                <span asp-validation-for="TreatmentTypeName" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center gap-3">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


